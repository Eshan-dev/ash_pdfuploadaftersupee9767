<config>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <ash_pdfuploadaftersupee9767 translate="title" module="ash_pdfuploadaftersupee9767">
                                        <title>PDF Uploads after SUPEE-9767</title>
                                    </ash_pdfuploadaftersupee9767>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
